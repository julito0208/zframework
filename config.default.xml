        <crop_aspect>0</crop_aspect>
        <default_thumb_type>default</default_thumb_type>
        <default_type>png</default_type>
	</image>

	<error_reporting>

		<enabled>0</enabled>
		<recipients array="true">ARRAY|</recipients>

	</error_reporting>


	<!--Configuración de algunas apis de google-->
